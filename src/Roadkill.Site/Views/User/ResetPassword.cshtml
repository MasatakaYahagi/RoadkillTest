@{ 
	ViewBag.Title = SiteStrings.ResetPassword_Title;
}

<h1>@SiteStrings.ResetPassword_Title</h1>

<div class="container pull-left">
	<div class="row">
		<div class="col-sm-5">
			@Html.ValidationSummary(SiteStrings.Shared_Error, new { @class = "alert alert-danger" })
			<p>@SiteStrings.ResetPassword_Label</p>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-6">
			<div id="resetpassword" class="lightborder rounded10 col-sm-10">

				<form class="form-horizontal" role="form" method="post">
					<div class="form-group">
						<label for="email" class="col-sm-3 control-label">@SiteStrings.Shared_Email_Label</label>
						<div class="col-sm-9">
							@Html.TextBox("email", null, new { @class = "form-control" })
						</div>
					</div>

					<div class="form-group">
						<div class="col-sm-offset-4 col-sm-8">
							<input type="submit" class="btn btn-primary right" value="@SiteStrings.ResetPassword_Button" />
						</div>
					</div>
				</form>

			</div>
		</div>
	</div>
</div>