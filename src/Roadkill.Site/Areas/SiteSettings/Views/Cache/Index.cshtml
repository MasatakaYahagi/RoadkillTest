@model List<IEnumerable<string>>
@{ 
	ViewBag.Title = "View cache";
	ViewData["CacheActive"] = true;
}
@if (TempData["CacheCleared"] != null)
{
	<script type="text/javascript">
		$(document).ready(function ()
		{
			// TODO-translation
			toastr.success("All caches were successfully cleared.");
		});
	</script>
}

@Html.SiteSettingsNavigation()

<form role="form" method="post" action="@Url.Action("Clear", "Cache")">
	<input name="clear" type="submit" class="btn btn-primary" value="Clear cache" />
</form>
<div>
	<h2>Page cache (@Model[0].Count())</h2>
	<p class="TODO-translation">The keys are in the format "page ID.version"</p>
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Key</th>
			</tr>
		</thead>
		@foreach (string cacheKey in Model[0])
		{
		<tr>
			<td class="title">@cacheKey</td>
		</tr>
		}
	</table>
	<br class="clear" />

	<h2>Items cache (@Model[1].Count())</h2>
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Key</th>
			</tr>
		</thead>
	@foreach (string cacheKey in Model[1])
	{
		<tr>
			<td class="title">@cacheKey</td>
		</tr>
	}
	</table>
	<br class="clear" />
</div>